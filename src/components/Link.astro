---
import { Icon } from "astro-icon/components";
const { iconPath, text, link } = Astro.props;

const svgColor = "#000000";
---

<a
  class="px-4 py-4 rounded-xl bg-white/50 grid grid-cols-[1fr_max-content_1fr]"
  href={link}
  target="_blank"
  name="spotify"
>
  {
    iconPath && (
      <Icon name={iconPath} class="text-black justify-self-start" size={32} />
    )
  }
  <p class="text-xl text-black col-start-2">{text}</p>
</a>
