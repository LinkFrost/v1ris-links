---
import Layout from "../layouts/Layout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import "../styles/global.css";
import Link from "../components/Link.astro";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION} restrictWidth={false}>
  <main class="w-full flex justify-center items-center">
    <div class="flex flex-col gap-8 w-[350px] py-8 md:w-3xl lg:w-4xl">
      <a href="https://v1ris.com" target="_blank">
        <h1
          class="text-7xl md:text-8xl font-semibold font-telma text-beige text-shadow drop-shadow-xl shadow-white md:-mt-20 motion-preset-fade-lg motion-preset-slide-down motion-duration-1000"
        >
          v1ris
        </h1>
      </a>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div
          class="flex flex-col gap-4 w-full justify-center motion-preset-fade-md motion-preset-slide-up"
        >
          <div
            class="flex flex-col text-left motion-preset-fade motion-duration-2000"
          >
            <h2 class="text-lg md:text-2xl text-eerie font-nippo">
              New Single Coming May 26th
            </h2>

            <h2
              class="text-5xl text-beige text-shadow font-semibold font-telma motion-preset-expand motion-scale-in-75 motion-duration-1000"
            >
              Voice of Reason
            </h2>
          </div>

          <img
            src="img/voice-of-reason-single-cover.png"
            alt="Voice of Reason"
            width="500px"
          />
        </div>

        <div
          class="flex flex-col gap-8 w-full justify-center bg-beige rounded-xl p-4 motion-preset-fade-lg motion-preset-slide-up motion-duration-1500"
        >
          <h2 class="text-4xl text-eerie font-nippo">Pre-Save Now!</h2>

          <Link
            iconPath="spotify"
            text="Spotify"
            link="https://api.ffm.to/sl/e/ps/60v5ban?_"
          />

          <Link
            iconPath="applemusic"
            text="Apple Music"
            link="https://api.ffm.to/sl/e/ps/5ldqo9b?_"
          />

          <Link
            iconPath="bandcamp"
            text="BandCamp"
            link="https://v1ris.bandcamp.com/follow_me"
          />

          <Link
            iconPath="tidal"
            text="Tidal"
            link="https://api.ffm.to/sl/e/ps/bvxmppj?"
          />

          <!-- <Link
            iconPath="soundcloud"
            text="Soundcloud"
            link="https://soundcloud.com/v1ris"
          /> -->

          <!-- <Link text="Main Website" link="https://v1ris.com/" /> -->
        </div>
      </div>
    </div>
  </main>
</Layout>
