<Layout title={SITE_TITLE} description={SITE_DESCRIPTION} restrictWidth={false}>
  <main>
    <div
      class="py-12 px-8 flex flex-col gap-8 w-lg rounded-xl bg-v1risDarkPurple/50 backdrop-blur-xs"
    >
      <h1
        class="text-6xl font-semibold text-white text-shadow drop-shadow-xl shadow-white"
      >
        v1ris
      </h1>

      <h2 class="text-3xl">New Single Out Now!</h2>

      <p
        class="aspect-square items-center justify-center flex text-3xl bg-black"
      >
        INSERT SINGLE ART
      </p>

      <div
        class="px-4 py-4 rounded-xl bg-white/50 flex flex-row justify-center items-center"
      >
        <a
          class="flex flex-row items-center gap-4"
          href="https://soundcloud.com/v1ris"
          target="_blank"
          name="soundcloud"
        >
          <Soundcloud fill={svgColor} />
          <p class="text-xl text-black">Soundcloud</p>
        </a>
      </div>

      <div
        class="px-4 py-4 rounded-xl bg-white/50 flex flex-row justify-center items-center"
      >
        <a
          class="flex flex-row items-center gap-4"
          href="https://open.spotify.com/artist/3QAWVvdQIrW5GGXjhXT5tH"
          target="_blank"
          name="spotify"
        >
          <Spotify fill={svgColor} />
          <p class="text-xl text-black">Spotify</p>
        </a>
      </div>

      <div
        class="px-4 py-4 rounded-xl bg-white/50 flex flex-row justify-center items-center"
      >
        <a
          class="flex flex-row items-center gap-4"
          href="https://v1ris.bandcamp.com/album/bury-yourself"
          target="_blank"
          name="bandcamp"
        >
          <BandCamp fill={svgColor} />
          <p class="text-xl text-black">BandCamp</p>
        </a>
      </div>

      <div
        class="px-4 py-4 rounded-xl bg-white/50 flex flex-row justify-center items-center"
      >
        <a
          class="flex flex-row items-center gap-4"
          href="https://bsky.app/profile/v1ris.com"
          target="_blank"
          name="bluesky"
        >
          <BlueSky fill={svgColor} />
          <p class="text-xl text-black">BlueSky</p>
        </a>
      </div>

      <div
        class="px-4 py-4 rounded-xl bg-white/50 flex flex-row justify-center items-center"
      >
        <a
          class="flex flex-row items-center gap-4"
          href="https://www.instagram.com/v1ris_music/"
          target="_blank"
          name="instagram"
        >
          <Instagram fill={svgColor} />
          <p class="text-xl text-black">Instagram</p>
        </a>
      </div>
    </div>
  </main>
</Layout>
